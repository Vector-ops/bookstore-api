// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Library {
  id    Int    @id @default(autoincrement())
  books Book[]
  count Int
}

model Book {
  id              Int     @id @default(autoincrement())
  name            String
  author          String
  borrowAvailable Int
  borrowTotal     Int
  sellAvailable   Int
  total           Int
  library         Library @relation(references: [id], fields: [libraryId])
  libraryId       Int
}

model SellBook {
  id     Int    @id @default(autoincrement())
  name   String
  author String
  price  Int
  count  Int
}

model BorrowBook {
  id         Int      @id @default(autoincrement())
  name       String
  author     String
  borrower   String
  borrowedOn DateTime
  returnOn   DateTime
  Penalty    Int
}
